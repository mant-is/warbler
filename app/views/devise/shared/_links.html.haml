.block
  %br
  - if !current_user
    = link_to "Sign up", new_user_registration_path,  class: "button is-link is-normal"
    = link_to "Log in", new_session_path(resource_name), class: "button is-primary is-normal"
    %br
    %br
    = link_to "Forgot your password?", new_password_path(resource_name), { class: "button is-primary is-normal" }
    %br
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), { class: "button is-primary is-normal" }
    %br
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), { class: "button is-primary is-normal" }
    %br
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), { class: "button is-primary is-normal" }
    %br
